<div class="container">
    <div class="row">       
         <div class="col-md-10 offset-md-1 mt-5">
            <div class="border border-primary rounded">
                <h3 class="bg-primary text-white text-center py-3 mb-0">
                    ユーザー一覧
                </h3>
            
                <!--ユーザー退会、画面ステータスも実装予定です-->
                <div class="row">
                    <div class="col-12">
                        <table class="table table-borderless">
                                <thead class="table-secondary">
                                       <tr>
                                           <th>会員ID</th>
                                           <th>ニックネーム</th>
                                           <th>メールアドレス</th>
                                           <th>投稿日時</th>
                                       </tr>
                                </thead>
                                <tbody>
                                    <!--ユーザー情報を表示-->
                                        <% @users.each do |user| %>
                                                <tr>
                                                    <td>
                                                       <%= user.id %>
                                                    </td>
                                                    <td>
                                                        <%= link_to admin_user_path(user) ,class: "text-dark" do %>  
                                                           <%= user.name %>
                                                        <% end %>
                                                    </td>
                                                    <td>
                                                        <%= user.email %>
                                                    </td>
                                                    <td>
                                                        <%= user.created_at.strftime('%Y/%m/%d %H:%M') %>
                                                    </td>
                                                </tr>
                                        <% end %>
                                </tbody>
                        </table>
                        <!--１ページ１５個まで-->
                         <%= paginate(@users) %>
                    </div>
                </div>
            </div>    
        </div>
    </div>    
</div>