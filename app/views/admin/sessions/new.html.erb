 <div class="container">
  <div class="row">
    <div class="ml-5">
　　　 <h2 class="mb-3">管理者ログイン</h2>
         
    </div>     
  </div>        
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   <div class="row mb-3 justify-content-center">
   
         
          <div class="col-10 mb-3">
             <div class="row">
               <div class="col-3 col-form-label">メールアドレス</div>
              
               <div class="col-7">
                 <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
               </div>
             </div>
          </div>
          <div class="col-10 mb-5">
             <div class="row">
               <div class="col-3 col-form-label">パスワード</div>
            
                <div class="col-7">
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                </div>
              </div>  
          </div>
          <div class="col-10">
            <div class="row ml-2">
            <%= f.submit "ログイン", class: "btn btn-primary col-3 offset-3 "%>
            </div>
          </div>
       
    </div>
   <% end %>
 <%= render "admin/shared/links" %>
</div>