<div class="container">
    <div class="row">
        <div class="col-lg-10 offset-lg-1 mt-5">
            <div class="border border-primary rounded bg-white">
                <h3 class="bg-primary text-white text-center py-3 mb-0">
                    ジャンル編集
                </h3>
                 <%= form_with model: @genre, url: admin_genre_path(@genre), method: :patch do |f| %>
                   <div class="row">
                         <div class="col-11 mb-3 mt-4">
                          <div class="row">
                            <div class="col-2 offset-1 col-form-label">ジャンル名</div>
                            <div class="col-3">
                             <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
                            </div>
                            <div class="col-2">
                                 <%= f.submit "保存",class: "btn btn-success col-10" %>
                            </div>
                            <div class="col-2">
                                <%= link_to "削除する", admin_genre_path(@genre), method: :delete, class:"btn btn-danger col-10" %>
                            </div>
                            
                          </div>
                        </div>
                  </div>
                   
                 <% end %>
            </div>
        </div>
    </div>
</div>