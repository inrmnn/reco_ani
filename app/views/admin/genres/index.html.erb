<div class="container">
    <div class="row">
        <div class="ml-5">
    　　　 <h2 class="mb-3">ジャンル一覧・追加</h2>
        </div> 
    </div>
    <%= form_with model: @genre, url: admin_genres_path do |f| %>
       <div class="row">
             <div class="col-11 mb-3">
              <div class="row">
                <div class="col-2 col-form-label">ジャンル名</div>
                <div class="col-3">
                 <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
                </div>
                <div class="col-2">
                     <%= f.submit "新規登録",class: "btn btn-success col-10" %>
                </div>
                
              </div>
            </div>
      </div>
       
     <% end %>
    
    <div class="row">
      <div class="col-11 mt-3">
          <div class="row">
              <div class="col-5">
                   <table class="table table-hover table-inverse">
                        <thead class="table-secondary">
                            <tr>
                              <th>ジャンル</th>
                              <th colspan="3"></th>
                            </tr>
                        </thead>
                        <tbody>   
                            <% @genres.each do |genre| %>
                              <tr>
                                <td>
                                  <%= genre.name %>
                                </td>
                                <td>
                                  <%= link_to "編集", edit_admin_genre_path(genre.id), class: "btn btn-success col-10" %>    
                                </td>
                              </tr> 
                            <% end %>
                
                        </tbody>
                    </table>
                  
               </div>      
          </div>
      </div>  
    </div>
    
</div>