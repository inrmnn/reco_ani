<div class="container">
   <div class="row">
      <div class="col-lg-6 offset-lg-3 mt-5">
            <div class="border border-primary rounded bg-white">
                <h3 class="mb-3 bg-primary text-white text-center py-3">
                    編集画面
                </h3>
      
                   <%= form_with model: @user, url: user_path do |f| %>  
                       <div class="row mt-5 justify-content-center">
                          <div class="col-8">
                              <div class="row">
                                  <div class="col-10 offset-1">
                                      <!--空欄だと保存されないようにしてあります-->
                                    <h3 class="mt-3 text-border text-center mb-3">ニックネーム</h3>
                                  </div>
                              </div>
                              
                              <div class="row">
                                  <div class="col-10 offset-1">
                                    <div class="text-center mb-5">
                                       <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
                                    </div>
                                  </div>
                              </div>
                              <!--好きなアニメを３つまで登録できるようになっています-->
                              <!--空欄でも登録可能-->
                              <div class="row">
                                  <div class="col-10 offset-1">
                                    <h3 class="mt-3 text-border text-center mb-3">好きなアニメ</h3>
                                  </div>
                              </div>
                              <!--1つ目-->
                               <div class="row">
                                  <div class="col-10 offset-1">
                                   　<div class="text-center mb-1">
                                       <%= f.text_field :anime_first, autofocus: true, autocomplete: "anime_first", class: "form-control"%>
                                    </div>
                                  </div>
                              </div>
                              <!--2つ目-->
                              <div class="row">
                                  <div class="col-10 offset-1">
                                   　<div class="text-center mb-1">
                                       <%= f.text_field :anime_second, autofocus: true, autocomplete: "anime_second", class: "form-control"%>
                                    </div>
                                  </div>
                              </div>
                              <!--3つ目-->
                              <div class="row">
                                  <div class="col-10 offset-1">
                                   　<div class="text-center mb-1">
                                       <%= f.text_field :anime_third, autofocus: true, autocomplete: "anime_third", class: "form-control"%>
                                    </div>
                                  </div>
                              </div>
                              <div class="row">
                                  <div class="col-10 offset-1">
                                    <div class="text-right mb-5">
                                      <p>※３つまで登録できます。</p>
                                    </div>
                                  </div>
                              </div>
                              <!--好きなアニメを３つまで登録できるようになっています-->
                              <!--空欄でも登録可能-->
                              <div class="row">
                                  <div class="col-10 offset-1">
                                    <h3 class="mt-3 text-border text-center mb-3">好きなジャンル</h3>
                                  </div>
                              </div>
                              <!--1つ目-->
                               <div class="row">
                                  <div class="col-10 offset-1">
                                   　<div class="text-center mb-1">
                                       <%= f.text_field :genre_first, autofocus: true, autocomplete: "genre_first", class: "form-control"%>
                                    </div>
                                  </div>
                              </div>
                              <!--2つ目-->
                               <div class="row">
                                  <div class="col-10 offset-1">
                                   　<div class="text-center mb-1">
                                       <%= f.text_field :genre_second, autofocus: true, autocomplete: "genre_second", class: "form-control"%>
                                    </div>
                                  </div>
                              </div>
                              <!--3つ目-->
                               <div class="row">
                                  <div class="col-10 offset-1">
                                   　<div class="text-center mb-1">
                                       <%= f.text_field :genre_third, autofocus: true, autocomplete: "genre_third", class: "form-control"%>
                                    </div>
                                  </div>
                              </div>
                              <div class="row">
                                  <div class="col-10 offset-1">
                                    <div class="text-right mb-5">
                                      <p>※３つまで登録できます。</p>
                                    </div>
                                  </div>
                              </div>
                              <div class="row">
                                 <div class="col-12">
                                  <div class="text-center mb-5">
                                  <%= f.submit "登録",class: "btn btn-success col-8" %>
                                    </div>
                                 </div>
                              </div>
                         </div>
                     </div>       
                  <% end %>
        </div>
     </div>            
  </div>
</div>