<div class="container">
    <div class="row">
        <div class="col-lg-8 offset-lg-2 mt-2">
           <%= link_to "一覧画面へ戻る", posts_path, class: "btn btn-primary p-3"  %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 offset-md-2 mt-3">
            <div class="border border-primary rounded bg-white">
                <h3 class="bg-primary text-white text-center py-3 mb-0">
                    検索結果
                </h3>
                <div class="row">
                    <div class="col-12">
                        <table class="table table-borderless">
                                <thead class="table-secondary">
                                       <tr>
                                           <th>アニメ名</th>
                                           <th>投稿者</th>
                                           <th>ジャンル</th>
                                           <th>投稿日時</th>
                                       </tr>
                                </thead>
                                <tbody>
                                    <!--検索結果に当てはまらない場合表示-->
                                    <% unless @posts.present? %>
                                        <tr>
                                            <td></td>
                                            <td>
                                             <h3 class="text-center">検索結果はありません。</h3>
                                            </td>
                                            <td></td>
                                        </tr>
                                    <% else %>
                                    <!--検索結果の投稿を表示-->
                                        <% @posts.each do |post| %>
                                                <tr>
                                                    <td>
                                                        <%= link_to post_path(post) do %>
                                                          <%= post.title %>
                                                        <% end %>
                                                    </td>
                                                    <td>
                                                        <%= link_to user_path(post.user) ,class: "text-dark" do %>  
                                                           <%= post.user.name %>
                                                        <% end %>
                                                    </td>
                                                    <td>
                                                        <%= post.genre.name %>
                                                    </td>
                                                    <td>
                                                        <%= post.updated_at.strftime('%Y/%m/%d %H:%M') %>
                                                    </td>
                                                </tr>
                                        <% end %>
                                    <% end %>
                                </tbody>
                        </table>
                         <%= paginate(@posts) %>
                    </div>
                </div>
            </div>    
        </div>   
    </div>
</div>