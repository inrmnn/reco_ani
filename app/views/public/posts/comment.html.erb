<div class="container">
    <div class="row">
        <div class="col-md-10 offset-1 mt-2">
           <%= link_to "投稿詳細へ戻る", post_path(@post), class: "btn btn-primary p-3"  %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 offset-1 mt-3">
            <div class="border border-primary rounded">
                <h3 class="bg-primary text-white text-center py-3 mb-0">
                   コメント一覧
                </h3>
            
    
                <div class="row">
                    <div class="col-12">
                        <table class="table">
                                <thead class="table-secondary">
                                       <tr>
                                           <th style="width: 15%">投稿者</th>
                                           <th style="width: 70%">コメント</th>
                                           <th style="width: 15%">投稿日時</th>
                                       </tr>
                                </thead>
                                <tbody>
                                       <% @post.comments.each do |comment| %>
                                                <tr>
                                                    <td>
                                                       <%= comment.user.name %>
                                                    </td>
                                                    <td>
                                                       <%= comment.comment %>
                                                    </td>
                                                    <td>
                                                       <%= comment.created_at.strftime('%Y/%m/%d %H:%M') %>
                                                    </td>
                                                </tr>
                                        <% end %>
                                </tbody>
                        </table>
                        
                    </div>
                </div>
            </div>    
        </div>   
    </div>
</div>